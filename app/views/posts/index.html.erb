<div class="container">
    <h1 class="text-center">Recent Urban Sherpa Adds</h1>
     <br>
    <table class="table table-striped">
      <tr>
        <th>Title</th>
        <th>Add</th>
        <th colspan="3"></th>
      </tr>
     
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.text %></td>
          <td><%= link_to 'Jesus', post_path(post),class:'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class:'btn btn-warning' %></td>
          <td><%= link_to 'Delete', post_path(post), class: 'btn btn-danger',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to 'New Post', new_post_path %>
</div>