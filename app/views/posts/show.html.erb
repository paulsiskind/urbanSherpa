<div class="container">
  <br>
  <br>
  <h1 class="text-center">Your Future Add!</h1>
  <div class="jumbotron show">

    <p>Author:
      <%= @post.user.name %>
      <%= gravatar_for @post.user %>
    <h2>
      <strong>Title:</strong>
      <%= @post.title %>
    </h2>
     
    <h4>
      <strong>ADD:</strong>
      <%= @post.text %>
    </h4>
  </div>
  
    
    <%= render 'comments/comment' %>
 
  <div class="new">
    <% if logged_in? %>
    <h4>Add a comment:</h4>

    <%= render 'comments/form' %>
    <% end %>
   
    <% if logged_in? %>
      <%= link_to "<span class=\"glyphicon glyphicon-edit\"></span>".html_safe, edit_post_path(@post)  %> |

    <% end %>  
    <%= link_to "<span class=\"glyphicon glyphicon-circle-arrow-left\"></span>".html_safe, posts_path %>
  
</div>

</div>