<div class="container">
  <br>
  <br>
  <h1 class="text-center">Your Future Add!</h1>
  <div class="jumbotron show">

    <p>Author:
      <%= @post.user.name %>
      <%= gravatar_for @post.user %>
    <h2>
      <strong>Title:</strong>
      <%= @post.title %>
    </h2>
     
    <h4>
      <strong>ADD:</strong>
      <%= @post.text %>
    </h4>
  </div>

    
    <%= render 'comments/comment' %>
 
  <div class="new">
    <% if logged_in? %>
    <h4>Add a comment:</h4>

    <%= render 'comments/form' %>
    <% end %>
    <% if logged_in? %>
      <%= link_to 'Edit', edit_post_path(@post) %> |
    <% end %>  
    <%= link_to 'Back', posts_path %>
</div>
</div>