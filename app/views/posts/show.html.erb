<div class="container">
  <h1 class="well">Your Future Add!</h1>
    <h2>
      <strong>Title:</strong>
      <%= @post.title %>
    </h2>
     
    <h4>
      <strong>ADD:</strong>
      <%= @post.text %>
    </h4>

    <h2>Comments</h2>
    <%= render @post.comments %>
 
    <h4>Add a comment:</h4>

    <%= render 'comments/form' %>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
</div>