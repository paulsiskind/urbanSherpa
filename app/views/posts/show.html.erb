<div class="container">
  <h1 class="well">Your Future Add!</h1>
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>
     
    <p>
      <strong>Text:</strong>
      <%= @post.text %>
    </p>

    <h2>Comments</h2>
    <% @post.comments.each do |comment| %>
      <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
      </p>
   
      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>
   <% end %>

    <%= render 'commentForm' %>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
</div>